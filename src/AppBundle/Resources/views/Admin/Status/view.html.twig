{% extends 'AppBundle:Admin:navbar.html.twig' %}

{% block title %}{{ 'admin.status.view.title' | trans({}, 'admin') }}{% endblock %}

{% block content %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ status.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ status.name }}</td>
            </tr>
            <tr>
                <th>Users assigned to role</th>
                {% for task in status.tasks %}
                    <td>{{ task.name }}</td>
                {% endfor %}
                </th>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_statuses_index') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
