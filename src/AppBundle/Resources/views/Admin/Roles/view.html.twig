{% extends 'AppBundle:Admin:navbar.html.twig' %}

{% block title %}{{ 'admin.roles.view.title' | trans({}, 'admin') }}{% endblock %}

{% block content %}
    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ role.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ role.name }}</td>
            </tr>
            <tr>
                <th>Users assigned to role</th>
                {% for user in role.users %}
                    <td>{{ user.username }}</td>
                {% endfor %}
                </th>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('admin_roles_index') }}">
                Back to the list
            </a>
        </li>
    </ul>
{% endblock %}
