{% extends 'AppBundle:Admin:navbar.html.twig' %}

{% block title %}{{ 'admin.roles.index.title' | trans({}, 'admin') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12 page-header">
            <h1>{{ 'admin.roles.index.header' | trans({}, 'admin') }}</h1>
            <a href="{{ path('admin_role_add') }}" class="btn btn-large btn-primary">
                <i class="glyphicon glyphicon-plus"></i>&nbsp;{{ 'role.actions.add' | trans({}, 'entities') }}
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{{ 'role.attributes.id' | trans({}, 'entities') }}</th>
                        <th>{{ 'role.attributes.name' | trans({}, 'entities') }}</th>
                        <th>{{ 'role.attributes.role' | trans({}, 'entities') }}</th>
                        <th>{{ 'admin.actions' | trans({}, 'admin') }}</th>
                    </tr>
                </thead>
                <tbody>
                    {% if roles | length > 0 %}
                        {% for role in roles %}
                            <tr>
                                <td>{{ role.id }}</td>
                                <td>{{ role.name }}</td>
                                <td>{{ role.role }}</td>
                                <td>
                                    <a href="{{ path('admin_role_view', {'id': role.id}) }}" title="{{ 'role.actions.view' | trans({}, 'entities') }}"><i class="glyphicon glyphicon-search"></i></a>&nbsp;
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock content %}
