{% extends '::base.html.twig' %}

{% block body %}
    <h1>Task</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ task.description }}</td>
            </tr>
            <tr>
                <th>Users assigned to task</th>
                {% for user in task.users %}
                    <td>{{ user.username }}</td>
                {% endfor %}
                </th>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('tasks') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('tasks-edit', { 'id': task.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <a href="{{ path('tasks-delete', { 'id': task.id }) }}">
            Delete
        </a>
    </li>
</ul>
{% endblock %}
