{% extends 'AppBundle:Default:navbar.html.twig' %}

{% block title %}{{ 'dashboard.title' | trans({}, 'dashboard') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="span12 page-header">
            <h1>{{ 'dashboard.hello' | trans({'%name%':current_user_name}, 'dashboard') }}</h1>
        </div>
    </div>

    <div class="row">
        {% if user.projects | length > 0 %}
            {% for project in user.projects %}
                <div class="col-md-3 col-md-offset-1 well well-lg">
                    <dl class="text-center">
                        <dt>
                            <a href="{{ path('projects_view', {'id': project.id}) }}" title="{{ project.name }}">
                                {{ project.name }}
                            </ad>
                        </dt>
                    </dl>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
