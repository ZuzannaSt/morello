{% extends 'AppBundle:Admin:navbar.html.twig' %}

{% block title %}{{ 'admin.projects.index.title' | trans({}, 'admin') }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12 page-header">
            <h1>{{ 'board.actions.index' | trans({}, 'entities') }}</h1>
        </div>
    </div>
    <div class="row">
        {% if boards | length > 0 %}
            {% for board in boards %}
                <div class="col-md-4">
                    <div class="col-md-10 col-md-offset-1 well text-center">
                        <h3>{{ board.name }}</h3>
                        {% if (board.tasks) | length > 0 %}
                            {% for task in (board.tasks) %}
                                <p>
                                    <a href="{{ path('project_board_tasks_view', { 'id': task.id, 'project_id': project_id, 'board_id': board.id }) }}">
                                        {{ task.name }}
                                    </a>
                              </p>
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}
