{% extends 'AppBundle:Default:navbar.html.twig' %}

{% block title %}{{ 'admin.projects.index.title' | trans({}, 'admin') }}{% endblock %}

{% block content -%}
    <div class="container">
        <div class="row">
            <div class="col-md-12 page-header">
                <h1>{{ 'admin.projects.index.header' | trans({}, 'admin') }}</h1>
                <a href="{{ path('admin_projects_add') }}" class="btn btn-large btn-primary">
                    <i class="glyphicon glyphicon-plus"></i>&nbsp;{{ 'project.actions.add' | trans({}, 'entities') }}
                </a>
            </div>
        </div>
        {% if projects|length > 0 %}
            <table class="records_list">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td><a href="{{ path('projects_view', { 'id': project.id }) }}">{{ project.id }}</a></td>
                        <td>{{ project.name }}</td>
                        <td>{{ project.description }}</td>
                        <td>
                        <ul>
                            <li>
                                <a href="{{ path('projects_view', { 'id': project.id }) }}">view</a>
                            </li>
                            <li>
                                <a href="{{ path('projects_edit', { 'id': project.id }) }}">edit</a>
                            </li>
                        </ul>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}

            <ul>
            <li>
                <a href="{{ path('admin_projects_add') }}">
                    Create a new entry
                </a>
            </li>
        </ul>
    </div>
{% endblock %}
