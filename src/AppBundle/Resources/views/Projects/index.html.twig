{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/structure.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/body.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/exception.css') }}" />
{% endblock %}

{% block body -%}
    <h1>{{ 'Project list'|trans }}</h1>
    {% if projects|length > 0 %}
        <table class="records_list">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td><a href="{{ path('projects-view', { 'id': project.id }) }}">{{ project.id }}</a></td>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('projects-view', { 'id': project.id }) }}">view</a>
                        </li>
                        <li>
                            <a href="{{ path('projects-edit', { 'id': project.id }) }}">edit</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

        <ul>
        <li>
            <a href="{{ path('projects-new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
